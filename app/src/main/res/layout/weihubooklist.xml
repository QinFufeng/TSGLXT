<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bookweihuimg"
                android:layout_width="240px"
                android:layout_height="320px" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20px"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="书名:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bookweihuname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="书名aaaaa" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作者:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bookweihuauthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="作者aaaaa" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bookweihucount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="123" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类别:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bookweihutype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="类别aaaaa" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
