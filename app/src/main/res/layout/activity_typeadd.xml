<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<LinearLayout
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类别名称:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/typeaddname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textSize="24sp" />
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="图书类别描述:"
                android:textSize="18sp"

                />

            <EditText
                android:id="@+id/typeadddesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLength="100" />
        </LinearLayout>

        <LinearLayout
android:visibility="invisible"
            android:id="@+id/layout_loading4"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/load_dialog1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_load1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="请稍后..."
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/quxiao12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="typequxiao"
                android:text="取消" />

            <Button
                android:id="@+id/typeadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加"
                android:onClick="typeaddCk"/>

            <Button
                android:id="@+id/typealt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改"
                android:visibility="gone"
                android:onClick="typeAltCk"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>